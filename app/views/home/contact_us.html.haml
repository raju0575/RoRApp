= content_for :title, 'ContactUs'
%main
  .container
    / google map
    %section.g-map
      .row
        .col-md-12
          .google-map
            #map-canvas
    / /.g-map (google-map end)
    / contact-form
    %section.contact-form
      %h1 Contact
      %p
        Welcome for contact us, if you have any question or want writing us or advertising here. Please kindly contact us by email
        %strong staff@99hits.com
        or leave a reply here with form bellow. We will reply to you as soon as possible.
      %form{:action => "contact.php", :method => "post"}
        .row
          .col-md-4
            .form-group
              %input#name.form-control{:name => "name", :placeholder => "Full Name", :required => "required", :type => "text"}
            .form-group
              %input#email.form-control{:name => "email", :placeholder => "Email Address", :required => "required", :type => "email"}
            .form-group
              %input#subject.form-control{:name => "website", :placeholder => "Your Website", :required => "required", :type => "url"}
          .col-md-8
            %textarea#message.form-control{:name => "message", :placeholder => "Type here message", :required => "required", :rows => "8", :type => "text"}
        %button#submit.btn.btn-contact{:name => "submit", :type => "submit"} send message
        / form end
        / /.contact-form

        <script src="https://maps.googleapis.com/maps/api/js"></script>
        :javascript
            function initialize() {
              var mapCanvas = document.getElementById('map-canvas');
              var mapOptions = {
                center: new google.maps.LatLng(17.4391746, 78.3785343),
                zoom: 16,
                mapTypeId: google.maps.MapTypeId.ROADMAP
              }
              var map = new google.maps.Map(mapCanvas, mapOptions)
            }
            google.maps.event.addDomListener(window, 'load', initialize);